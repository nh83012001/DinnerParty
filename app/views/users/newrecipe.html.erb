
  <h1>Create a New Recipe</h1>
<br>
<body>
  <%if @recipe.errors.any? %>
    <ul>
      <%@recipe.errors.full_messages.each do |msg|%>
        <li><%=msg%></li>
      <%end%>
    </ul>
  <%end%>


<%= form_for @recipe do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br><br>
  <%= f.label :ingredients %>
  <br>
  <%= f.text_area(:ingredients, size: "50x8") %>
  <br><br>
  <%= f.label :instructions %>
  <br>
  <%= f.text_area(:instructions, size: "50x8") %>
  <br><br>
  <%= f.hidden_field :owner_id, value: @user.id %>
  <%= f.submit %>

<% end %>
</body>

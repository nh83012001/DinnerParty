<%= form_for @recipe do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br><br>
  <%= f.label :ingredients %>
  <br>
  <%= f.text_area(:ingredients, size: "50x8") %>
  <br><br>
  <%= f.label :instructions %>
  <br>
  <%= f.text_area(:instructions, size: "50x8") %>
  <br><br>
  <%= f.hidden_field :owner_id, value: @owner.id %>
  <%= f.submit %>

<% end %>
